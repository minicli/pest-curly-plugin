{
    "name": "minicli/pest-plugin-curly",
    "description": "Make curl(y) requests in Pest tests",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "endtoend",
        "minicli",
        "resquests",
        "api"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "pestphp/pest": "^3.2.0",
        "pestphp/pest-plugin": "^3.0.0",
        "minicli/curly": "^0.2.2"
    },
    "autoload": {
        "psr-4": {
            "Minicli\\PestCurlyPlugin\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^v2.6.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
